{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content span=8 offset=2">
        <div class="center-block">
            <form class="form-horizontal" name="authenticate" action="{{ path('conference_new') }}" method="post">
                <fieldset>
                    <legend>Conference creation</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Conference name</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.name, { 'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Starts on</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.start, { 'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Ends on</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.end, { 'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Description</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.description, { 'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Price</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.price, { 'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Owner</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.owner, { 'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}
