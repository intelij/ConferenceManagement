{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hall edit</h1>

    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.seatsCount) }}
    {{ form_row(edit_form.pricePerDay) }}
    {{ form_row(edit_form.address) }}
    <a href="{{ path('address_new', { 'id': hall.id }) }}">Create a new address</a>
    <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('hall_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
