{% extends 'base.html.twig' %}

{% block body %}
    <h1>Programpoint</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programPoint.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ programPoint.name }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if programPoint.start %}{{ programPoint.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if programPoint.end %}{{ programPoint.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ programPoint.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('programpoint_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('programpoint_edit', { 'id': programPoint.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
